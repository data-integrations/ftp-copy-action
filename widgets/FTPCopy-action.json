{
  "metadata": {
    "spec-version": "1.0"
  },
  "configuration-groups": [
    {
      "label": "FTP Copy Properties",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Host",
          "name": "host"
        },
        {
          "widget-type": "textbox",
          "label": "Port",
          "name": "port"
        },
        {
          "widget-type": "select",
          "label": "Protocol",
          "name": "protocol",
          "widget-attributes": {
            "values": [
              "sftp",
              "ftp"
            ],
            "default": "sftp"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Username",
          "name": "userName"
        },
        {
          "widget-type": "password",
          "label": "Password",
          "name": "password"
        },
        {
          "widget-type": "textbox",
          "label": "Source directory",
          "name": "srcDirectory"
        },
        {
          "widget-type": "textbox",
          "label": "Path Filter",
          "name": "fileRegex"
        },
        {
          "widget-type": "textbox",
          "label": "Destination directory",
          "name": "destDirectory"
        },
        {
          "widget-type": "select",
          "label": "Unzip files ?",
          "name": "extractZipFiles",
          "widget-attributes": {
            "values": [
              "true",
              "false"
            ],
            "default": "true"
          }
        }
      ]
    }
  ],
  "outputs": [
        ]
      }
