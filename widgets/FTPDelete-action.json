{
  "metadata": {
    "spec-version": "1.0"
  },
  "configuration-groups": [
    {
      "label": "FTPDelete Action Properties",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Host",
          "name": "host"
        },
        {
          "widget-type": "textbox",
          "label": "Port",
          "name": "port"
        },
        {
          "widget-type": "textbox",
          "label": "User name",
          "name": "userName"
        },
        {
          "widget-type": "password",
          "label": "Password",
          "name": "password"
        },
        {
          "widget-type": "textbox",
          "label": "Comma separated list of file names to delete",
          "name": "filesToDelete",
          "widget-attributes": {
            "default": "${ftp.copied.file.names}"
          }
        },
        {
          "widget-type": "select",
          "label": "Continue execution on error",
          "name": "continueOnError",
          "widget-attributes": {
            "values": [
              "true",
              "false"
            ],
            "default": "false"
          }
        },
        {
          "widget-type": "keyvalue",
          "label": "Properties for SSH",
          "name": "sshProperties",
          "widget-attributes": {
            "showDelimiter": "false",
            "key-placeholder": "key",
            "value-placeholder": "value"
          }
        }
      ]
    }
  ],
  "outputs": [
  ]
}
